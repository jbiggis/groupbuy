<p id="notice"><%= notice %></p>

<div id="deal-image">

	<%= image_tag @deal.image.url, :size => '450x350' %>

</div>

<div id = "deal-details">

<p>
  <%= @deal.title %>
</p>

<p>
  <%= @deal.description %>
</p>

<%= link_to "buy now!", {:controller => 'public', :action => 'checkout', :id => @deal.id}, :class => 'button rounded' %>

<p>
  HK<%= number_to_currency(@deal.price) %>
</p>

<p>
  <b>Value:</b>
  HK<%= number_to_currency(@deal.value) %>
</p>

<p>
<b>Discount:</b>
<%= (((@deal.value - @deal.price)/@deal.value)*100).to_i %>%
</p>

<b>You save:</b>
HK<%= number_to_currency(@deal.value - @deal.price) %>
</p>
</div>

<div id="deal-timer">
  <%= render 'shared/jquery_timer' %>
</div>

<div id="deal-fine-print">
	<p>       
	<b>Fine print:</b>
  <%= @deal.fine_print %>
  </p>
  <p>
  <b>Expiration date:</b>
  <%= @deal.expiration_date.strftime("%B %d, %Y") %>

</p>
</div>


<div id = "deal-summary">
<p>
  <b>Summary:</b>
  <%= @deal.summary %>
  </p>
  </div>





  <div id="deal-company-info">
<b>Company Information:</b>
<p>
<%= @deal.company_name %>
</p>

<p>
  <%= @deal.company_address %>
</p>

<p>
  <%= @deal.company_website %>
</p>

<p>
  <%= @deal.company_phone %>
</p>

</div>




