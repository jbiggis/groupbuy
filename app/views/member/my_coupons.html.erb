<h1><%=t :my_coupons%></h1>


<%= link_to t(:my_coupons), 'my_coupons' %>
<%= link_to t(:my_profile), 'my_profile' %>


<table>
      
  <tr>
	
	  <th><%=t :coupon%></th>
    <th></th>
    <th><%=t :coupon_code%></th>
    <th><%=t :purchase_date%></th>
    <th><%=t :expiry_date%></th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>

  <tr>
    <td><%= image_tag coupon.deal.image.url, :size => '90x90' %></td>
    <td><%= link_to coupon.deal.title, :controller => 'public', 
		:action => 'deal', :id => coupon.deal.id %></td>
    <td><%= coupon.coupon_code %></td>
    <td><%= coupon.purchased_date.strftime("%B %d, %Y") %></td>
    <td><%= coupon.expiration_date.strftime("%B %d, %Y") %></td>
    <td><%= link_to "Print", {:controller => "member", :action => "show", :id => coupon.id, :format => 'pdf'}%></td
  </tr>

<% end %>

</table>

<br />


