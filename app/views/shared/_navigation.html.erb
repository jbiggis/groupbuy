<div id="user-nav" class="round">  
	<% if admin_signed_in? %>
	<span class="greeting">Hi <%= current_admin.name %>! </span> 
	<%= link_to "Admin panel", "/admin/home", :class => "nav-link" %>
       	<%= link_to "Sign out", destroy_admin_session_path, :class => "nav-link" %>	

	
      <% elsif user_signed_in? %>  
	      <span class="greeting"><%=t :greeting%> <%= current_user.name %>! </span>
      	<%= link_to t(:my_account), "/member/my_coupons", :class => "nav-link" %>	
	<%= link_to t(:signout), destroy_user_session_path, :class => "nav-link" %>

      <% else %>  
	<% fb_signin = image_tag "fb_login.png", :alt => "Facebook" %>
	<%= link_to fb_signin, '/auth/facebook', :class => 'fb-signin' %>
         |
        <%= link_to t(:signin), new_user_session_path, :class => "nav-link" %> |

          <%= link_to t(:signup), new_user_registration_path, :class => "nav-link" %>

	<% end %>
    </div>  
