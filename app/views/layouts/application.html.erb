<!DOCTYPE html>
<html>
<head>
	<title>Groupbuy</title>

  <%= render 'shared/stylesheets' %> 
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
    <%= javascript_include_tag 'jquery-1.4.1' %>
  <%= javascript_include_tag 'countdown' %>


</head>
<body>

  <div id='header'>
  	
  <div id = "email-signup" class ="bottom-round" >
	 
  <%= render 'shared/email_signup' %>

  </div>

  <div id='nav'>

  <%= render 'shared/navigation' %>

  </div>

  </div>


  <div id = "container" >


  <% flash.each do |key, value| %>

	  <div class="flash <%= key %>"><%= value %></div>

  <% end %>

  <div id="content">
  <div id = "content-left" class="round" >
      
	<%= render 'shared/menu' %>
 </div>

  <div id = "content-right" class="round">  



	  <%= yield %>
  
  </div>
</div>

<div class="divider"></div>

  <%= render 'shared/footer' %>

  </div>





</body>
</html>
